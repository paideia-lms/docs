---
import docs from '~/assets/docs.svg?raw';

const main = 'https://paideialms.com/';
const self = '/' + (Astro.locals.starlightRoute.locale || 'en') + '/getting-started/';

---

<span class="site-title sl-flex">
	<a class="paideia-logo" href={main}  aria-label="paideia" >	<img src="/assets/paideia-logo.png" alt="Paideia Logo"/></a>
	<a class="docs-logo" href={self} set:html={docs} aria-label="Docs" />
</span>

<style>
	.site-title {
		gap: 1rem;
		position: relative;
	}
	.site-title a {
		display: flex;
	}
	.paideia-logo {
		color: var(--sl-color-white);
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.paideia-logo img {
		/* in the size of a */
		height: 3rem
	}
	.docs-logo {
		color: var(--sl-color-text-accent);
	}

	/* On focus, outline <img> and <svg> rather than <a> */
	.site-title a:focus-visible {
		outline: 0;
	}
	.site-title a:focus-visible > :global(*) {
		outline: auto;
		outline-offset: 0.33rem;
		border-radius: 1px;
	}
	/* Adjust svg sizes to full nav height */
	.site-title :global(svg) {
		--display-height: 1.75rem;
		/* `auto` ensures the `<svg>` scales down on really narrow viewports */
		width: auto;
		height: auto;
		margin-block: calc((var(--sl-nav-height) - var(--display-height)) / 2);
		transition: transform 0.18s cubic-bezier(0.23, 1, 0.32, 1);
	}
	.site-title a:hover :global(svg){
		--hover-offset: 0.15rem;
		transform: translateY(calc(var(--hover-offset) * -1));
	}

	.site-title .paideia-logo img {
		--display-height: 1.75rem;

		margin-block: calc((var(--sl-nav-height) - var(--display-height)) / 2);
		transition: transform 0.18s cubic-bezier(0.23, 1, 0.32, 1);
	}
	.site-title .paideia-logo:hover img{
		--hover-offset: 0.15rem;
		transform: translateY(calc(var(--hover-offset) * -1));
	}

	.deepwiki-badge {
		position: absolute;
		right: 1rem;
		display: flex;
		align-items: center;
	}

	.deepwiki-badge img {
		height: 1.5rem;
		width: auto;
		margin-block: calc((var(--sl-nav-height) - 1.5rem) / 2);
		opacity: 0.8;
		transition: opacity 0.18s cubic-bezier(0.23, 1, 0.32, 1);
	}

	.deepwiki-badge:hover img {
		opacity: 1;
	}
</style>
